<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".changeCMYKFragment">

    <ImageView
        android:id="@+id/srcImageCCMYK"
        android:layout_width="match_parent"
        android:layout_height="234dp"
        tools:src="@drawable/img1" />

    <ImageView
        android:id="@+id/destImageCCMYK"
        android:layout_width="match_parent"
        android:layout_height="259dp"
        android:layout_gravity="bottom"
        tools:src="@tools:sample/backgrounds/scenic" />

    <Button
        android:id="@+id/executeButtonCCMYK"
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="400dp"
        android:text="Изменить CMYK" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="46dp"
        android:layout_height="33dp"

        android:layout_gravity="left"
        android:layout_marginTop="250dp"
        android:autoSizeTextType="uniform"
        android:foregroundGravity="center"
        android:gravity="center|center_horizontal"
        android:text="C" />

    <EditText
        android:id="@+id/cEditTextGB"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="250dp"
        android:autoSizeTextType="uniform"
        android:ems="10"
        android:text="22" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="76dp"
        android:layout_height="40dp"
        android:layout_gravity="left"
        android:layout_marginVertical="300dp"

        android:autoSizeTextType="uniform"
        android:foregroundGravity="center"
        android:gravity="center_vertical"
        android:text="M" />

    <EditText
        android:id="@+id/mEditText"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="77dp"
        android:layout_marginTop="300dp"
        android:autoSizeTextType="uniform"
        android:ems="10" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="76dp"
        android:layout_height="40dp"
        android:layout_gravity="left"
        android:layout_marginVertical="350dp"

        android:autoSizeTextType="uniform"
        android:foregroundGravity="center"
        android:gravity="center_vertical"
        android:text="Y" />

    <EditText
        android:id="@+id/yEditText"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="77dp"
        android:layout_marginTop="350dp"
        android:autoSizeTextType="uniform"
        android:ems="10" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="27dp"
        android:layout_height="40dp"
        android:layout_gravity="left"
        android:layout_marginVertical="350dp"

        android:layout_marginLeft="230dp"
        android:autoSizeTextType="uniform"
        android:foregroundGravity="center"
        android:gravity="center_vertical"
        android:text="K" />

    <EditText
        android:id="@+id/kEditText"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="350dp"
        android:autoSizeTextType="uniform"
        android:ems="10" />

</FrameLayout>