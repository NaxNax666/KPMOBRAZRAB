<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetRedFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/srcImageSR"
        android:layout_width="match_parent"
        android:layout_height="304dp"
        tools:src="@drawable/img1" />

    <ImageView
        android:id="@+id/destImageSR"
        android:layout_width="match_parent"
        android:layout_height="259dp"
        android:layout_gravity="bottom"
        tools:src="@tools:sample/backgrounds/scenic" />

    <Button
        android:id="@+id/executeButtonSR"
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="400dp"
        android:text="Установить Красный" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="152dp"
        android:layout_height="40dp"
        android:layout_gravity="left"
        android:layout_marginVertical="350dp"

        android:layout_marginLeft="10dp"
        android:autoSizeTextType="uniform"
        android:foregroundGravity="center"
        android:gravity="center_vertical"
        android:text="Значение красного" />

    <EditText
        android:id="@+id/strenghtEditTextSR"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="55dp"
        android:layout_marginTop="350dp"
        android:autoSizeTextType="uniform"
        android:ems="10" />

</FrameLayout>